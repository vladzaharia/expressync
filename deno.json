{
  "nodeModulesDir": "manual",
  "tasks": {
    "check": "deno fmt --check . && deno lint . && deno check",
    "dev": "vite",
    "build": "vite build",
    "start": "deno serve -A _fresh/server.js",
    "update": "deno run -A -r jsr:@fresh/update .",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "deno run -A src/db/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "lint": {
    "rules": {
      "tags": [
        "fresh",
        "recommended"
      ]
    }
  },
  "exclude": [
    "**/_fresh/*"
  ],
  "imports": {
    "@/": "./",
    "fresh": "jsr:@fresh/core@^2.2.0",
    "preact": "npm:preact@^10.28.1",
    "@preact/signals": "npm:@preact/signals@^2.5.1",
    "@fresh/plugin-vite": "jsr:@fresh/plugin-vite@^1.0.8",
    "vite": "npm:vite@^7.1.3",

    "drizzle-orm": "npm:drizzle-orm@^0.45.1",
    "drizzle-kit": "npm:drizzle-kit@^0.31.8",
    "postgres": "npm:postgres@^3.4.5",
    "zod": "npm:zod@^4.3.4",
    "better-auth": "npm:better-auth@^1.4.0",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.3",
    "@std/async": "jsr:@std/async@^1.0.11",
    "croner": "jsr:@hexagon/croner@^9.1.0",
    "tailwindcss": "npm:tailwindcss@^4.1.0",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.0"
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.asynciterable",
      "dom.iterable",
      "deno.ns"
    ],
    "jsx": "precompile",
    "jsxImportSource": "preact",
    "jsxPrecompileSkipElements": [
      "a",
      "img",
      "source",
      "body",
      "html",
      "head",
      "title",
      "meta",
      "script",
      "link",
      "style",
      "base",
      "noscript",
      "template"
    ],
    "types": [
      "vite/client"
    ]
  }
}
