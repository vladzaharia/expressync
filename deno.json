{
  "nodeModulesDir": "manual",
  "tasks": {
    "check": "deno fmt --check . && deno lint . && deno check",
    "dev": "vite",
    "build": "vite build",
    "start": "deno serve -A _fresh/server.js",
    "update": "deno run -A -r jsr:@fresh/update .",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "deno run -A src/db/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "lint": {
    "rules": {
      "tags": [
        "fresh",
        "recommended"
      ]
    }
  },
  "exclude": [
    "**/_fresh/*"
  ],
  "imports": {
    "@/": "./",
    "fresh": "jsr:@fresh/core@^2.2.0",
    "preact": "npm:preact@^10.28.1",
    "@preact/signals": "npm:@preact/signals@^2.5.1",
    "@fresh/plugin-vite": "jsr:@fresh/plugin-vite@^1.0.8",
    "vite": "npm:vite@^7.1.3",

    "drizzle-orm": "npm:drizzle-orm@^0.45.1",
    "drizzle-kit": "npm:drizzle-kit@^0.31.8",
    "postgres": "npm:postgres@^3.4.5",
    "zod": "npm:zod@^4.3.4",
    "better-auth": "npm:better-auth@^1.4.0",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.3",
    "@std/async": "jsr:@std/async@^1.0.11",
    "croner": "jsr:@hexagon/croner@^9.1.0",
    "tailwindcss": "npm:tailwindcss@^4.1.0",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.0",

    "clsx": "npm:clsx@^2.1.1",
    "tailwind-merge": "npm:tailwind-merge@^3.3.1",
    "class-variance-authority": "npm:class-variance-authority@^0.7.1",
    "lucide-preact": "npm:lucide-preact@^0.511.0",
    "@radix-ui/react-slot": "npm:@radix-ui/react-slot@^1.2.3",
    "@radix-ui/react-label": "npm:@radix-ui/react-label@^2.1.7",
    "@radix-ui/react-checkbox": "npm:@radix-ui/react-checkbox@^1.3.2",
    "@radix-ui/react-select": "npm:@radix-ui/react-select@^2.2.5",
    "@radix-ui/react-dialog": "npm:@radix-ui/react-dialog@^1.1.14",
    "@radix-ui/react-dropdown-menu": "npm:@radix-ui/react-dropdown-menu@^2.1.15",
    "@radix-ui/react-switch": "npm:@radix-ui/react-switch@^1.2.5",
    "@radix-ui/react-tooltip": "npm:@radix-ui/react-tooltip@^1.2.7",
    "@radix-ui/react-separator": "npm:@radix-ui/react-separator@^1.1.7",
    "@radix-ui/react-scroll-area": "npm:@radix-ui/react-scroll-area@^1.2.9",
    "sonner": "npm:sonner@^2.0.6",

    "@tanstack/react-form": "npm:@tanstack/react-form@^1.27.7",

    "motion": "npm:motion@^12.18.1"
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.asynciterable",
      "dom.iterable",
      "deno.ns"
    ],
    "jsx": "precompile",
    "jsxImportSource": "preact",
    "jsxPrecompileSkipElements": [
      "a",
      "img",
      "source",
      "body",
      "html",
      "head",
      "title",
      "meta",
      "script",
      "link",
      "style",
      "base",
      "noscript",
      "template"
    ],
    "types": [
      "vite/client"
    ]
  }
}
